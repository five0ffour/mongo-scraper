<div id="home">

  <nav class="navbar nav navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="/">Tech Scraper</a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/saved">View Saved Articles</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 bg-pic">
      </div>
      <div class="col-lg-8 no-background">
        <a class="btn btn-success article-btn text-white" id="scrape-btn">Load New Articles</a>
        <a class="btn btn-danger article-btn text-white" id="clear-btn">Clear Articles</a>
        <div class="card z-depth-2">
          <h4 class="header text_b center-align">Technology News</h4>
          <table class="table table-striped">
            <tbody>
              {{#each articles}}
              <tr>
                <td>
                  <p data-id={{this._id}}>{{this.title}}</p>
                </td>
                <td><button class="save-btn btn btn-success" data-id={{this._id}}><i class="fas fa-check"></i></button></td>
                <td><button class="note-btn btn btn-primary" data-id={{this._id}}><i class="fas fa-sticky-note"></i></button></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="./js/app.js"></script>